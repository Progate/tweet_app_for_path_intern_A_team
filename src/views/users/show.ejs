<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= user.imageName %>" data-test="user-image">
      <div class="user-info">
        <div class="user-name-email">
        <h2 data-test="user-name"><%= user.name %></h2>
        <p data-test="user-email"><%= user.email %></p>
      </div>
        <div class="Follow">
          <div class="Followers">
            <div class="LinkKenTheNinja-num">
              4</div>
            <div class="LinkKenTheNinja">
              Followers</div>
          </div>
          <div class="Vector1"></div>
          <div class="Following">
            <div class="LinkKenTheNinja-num">
              3</div>
            <div class="LinkKenTheNinja">
              Following</div>
          </div>
        </div>
      </div>
      <% if(currentUser.id === user.id) { %>
        <a href="<%= `/users/${user.id}/edit` %>">Edit</a>
      <% } else { %>
        <div class="StateFollow">
          <div class="Follow-button">
            Follow</div>
        </div>
      <% } %>
      
    </div>
    <ul class="user-tabs">
      <li class="active">
        <a href="<%= `/users/${user.id}` %>">Posts</a>
      </li>
      <li>
        <a href="<%= `/users/${user.id}/likes` %>">Likes</a>
      </li>
    </ul>
    <%- include('../_timeline', {timeline: timeline}); %>
  </div>
</div>
